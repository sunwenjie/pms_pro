<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.0.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
		http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd"
	default-lazy-init="true">


	<description>定时器</description>
	<beans>
		<!-- 定时任务 START -->
		<!-- icrmReportTaskObject START -->
		<bean id="icrmReportTaskObject" class="com.asgab.task.IcrmReportTask" />

		<bean id="icrmReportTaskObjDetail"
			class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
			<property name="targetObject" ref="icrmReportTaskObject" />
			<property name="targetMethod" value="run" />
			<property name="concurrent" value="true" /><!-- 设置是否允许并发执行 -->
		</bean>

		<bean id="icrmReportTaskObjectTrigger"
			class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
			<property name="jobDetail" ref="icrmReportTaskObjDetail" />
			<property name="cronExpression">
				<!-- 秒，分，时，日期，月份，周几 -->
                <value>0 0 23 ? * 5</value><!-- 每周四晚上十一点发送报表 -->
			</property>
		</bean>
		<!-- icrmReportTaskObject end -->
		
		<!-- emailRetry START -->
		<bean id="emailRetryTaskObject" class="com.asgab.task.EmailRetryTask" />

		<bean id="emailRetryTaskObjDetail"
			class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
			<property name="targetObject" ref="emailRetryTaskObject" />
			<property name="targetMethod" value="run" />
			<property name="concurrent" value="false" /><!-- 设置是否允许并发执行 -->
		</bean>

		<bean id="emailRetryTaskObjectTrigger"
			class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
			<property name="jobDetail" ref="emailRetryTaskObjDetail" />
			<property name="cronExpression">
				<!-- 秒，分，时，日期，月份，周几 -->
                <value>0 0/10 * * * ?</value>
			</property>
		</bean>
		<!-- emailRetry end -->
		
		<!-- Finance Adx Report START -->
		<bean id="financeReportTaskObject" class="com.asgab.task.FinanceReportTask" />

		<bean id="financeReportTaskObjDetail"
			class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
			<property name="targetObject" ref="financeReportTaskObject" />
			<property name="targetMethod" value="run" />
			<property name="concurrent" value="false" /><!-- 设置是否允许并发执行 -->
		</bean>

		<bean id="financeReportTaskObjectTrigger"
			class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
			<property name="jobDetail" ref="financeReportTaskObjDetail" />
			<property name="cronExpression">
				<!-- 秒，分，时，日期，月份，周几 -->
				<value>0 0 1 2 * ?</value><!-- 每个月初2号凌晨 -->
			</property>
		</bean>
		<!-- Finance Adx Report end -->

		<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
			<property name="triggers">
				<list>
					<ref bean="icrmReportTaskObjectTrigger" />
					<ref bean="emailRetryTaskObjectTrigger" />
					<ref bean="financeReportTaskObjectTrigger" />
				</list>
			</property>
		</bean>
		<!-- 定时任务 END -->
	</beans>

</beans>